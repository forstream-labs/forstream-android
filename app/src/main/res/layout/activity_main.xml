<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <include layout="@layout/toolbar_material"/>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin_md">

    <com.google.android.material.button.MaterialButton
      android:id="@+id/sign_in_with_google_button"
      style="@style/Button.Large"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/sign_in_with_google"/>

    <com.google.android.material.button.MaterialButton
      android:id="@+id/connect_youtube_channel_button"
      style="@style/Button.Large"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/connect_youtube"/>

    <com.google.android.material.button.MaterialButton
      android:id="@+id/connect_facebook_channel_button"
      style="@style/Button.Large"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/connect_facebook"/>

    <com.google.android.material.button.MaterialButton
      android:id="@+id/create_live_stream_button"
      style="@style/Button.Large"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/create_live_stream"/>

    <com.google.android.material.button.MaterialButton
      android:id="@+id/start_live_stream_button"
      style="@style/Button.Large"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/start_live_stream"/>

    <SurfaceView
      android:id="@+id/surface_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent"/>

  </LinearLayout>

</LinearLayout>