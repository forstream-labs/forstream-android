<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:padding="@dimen/margin_md">

  <ImageView
    android:id="@+id/channel_image"
    android:layout_width="@dimen/image_xlg"
    android:layout_height="@dimen/image_xlg"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/margin_sm"/>

  <TextView
    android:id="@+id/channel_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/margin_md"
    android:textColor="@color/text_primary"
    android:textSize="@dimen/text_xlg"
    android:textStyle="bold"/>

  <com.google.android.material.textfield.TextInputLayout
    android:id="@+id/rtmp_channel_name_layout"
    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_xsm"
    android:hint="@string/bottom_sheet_connect_rtmp_channel_name"
    app:endIconMode="clear_text">

    <com.google.android.material.textfield.TextInputEditText
      android:id="@+id/rtmp_channel_name_input"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="@string/bottom_sheet_connect_rtmp_channel_name_hint"
      android:inputType="textCapSentences"
      android:singleLine="true"
      android:textSize="@dimen/text_lg"/>

  </com.google.android.material.textfield.TextInputLayout>

  <com.google.android.material.textfield.TextInputLayout
    android:id="@+id/rtmp_url_layout"
    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_xsm"
    android:hint="@string/bottom_sheet_connect_rtmp_url"
    app:endIconMode="clear_text">

    <com.google.android.material.textfield.TextInputEditText
      android:id="@+id/rtmp_url_input"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="@string/bottom_sheet_connect_rtmp_url_hint"
      android:singleLine="true"
      android:textSize="@dimen/text_lg"/>

  </com.google.android.material.textfield.TextInputLayout>

  <com.google.android.material.textfield.TextInputLayout
    android:id="@+id/rtmp_stream_key_layout"
    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_xsm"
    android:hint="@string/bottom_sheet_connect_rtmp_stream_key"
    app:endIconMode="clear_text">

    <com.google.android.material.textfield.TextInputEditText
      android:id="@+id/rtmp_stream_key_input"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="@string/bottom_sheet_connect_rtmp_stream_key_hint"
      android:singleLine="true"
      android:textSize="@dimen/text_lg"/>

  </com.google.android.material.textfield.TextInputLayout>

  <com.google.android.material.button.MaterialButton
    android:id="@+id/connect_target_button"
    style="@style/Button.Large"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:enabled="false"
    android:text="@string/connect"/>

</LinearLayout>